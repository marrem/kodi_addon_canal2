<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.canal2"
version="1.1"
name="Canal2 Video Plugin"
provider-name="Marc Remijn">
<requires>
  <import addon="xbmc.python" version="2.24.0"/>
  <import addon="script.module.beautifulsoup" version="3.2.1"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Video Plugin to watch Canal2</summary>
  <description lang="en">Watch Cameroon TV channel Canal2</description>
  <description lang="fr">Regardez la chaine tel√© Camerounais Canal2</description>
  <assets>
      <!-- assets only works for v17 and up. To make icon and fanart visible to v16 and down, I kept these in
      their default paths -->
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources/screenshot-1.jpg</screenshot>
    <screenshot>resources/screenshot-2.jpg</screenshot>
    <screenshot>resources/screenshot-3.jpg</screenshot>
  </assets>
  <news>v1.1 Building live url now at 'play' time instead of creating list item. This avoids the url becoming stale when item
    is stored as a favourite</news>
</extension>
</addon>
